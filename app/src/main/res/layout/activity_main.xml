<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64B5F6"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.arlan.calculator.MainActivity">

    <LinearLayout
        style="@style/horizontal_linear_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E3F2FD"
            android:gravity="center_vertical|right"
            android:text="" />

        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E3F2FD"
            android:gravity="center_vertical|right"
            android:text="" />

    </LinearLayout>

    <LinearLayout style="@style/horizontal_linear_layout">

        <Button
            android:id="@+id/id_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Clear" />

        <Button
            android:id="@+id/id_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Back" />

    </LinearLayout>

    <LinearLayout style="@style/horizontal_linear_layout">

        <Button
            android:id="@+id/id_7"
            style="@style/button_style"
            android:text="7" />

        <Button
            android:id="@+id/id_8"
            style="@style/button_style"
            android:text="8" />

        <Button
            android:id="@+id/id_9"
            style="@style/button_style"
            android:text="9" />

        <Button
            android:id="@+id/id_divide"
            style="@style/button_style"
            android:text="/" />

    </LinearLayout>

    <LinearLayout style="@style/horizontal_linear_layout">

        <Button
            android:id="@+id/id_4"
            style="@style/button_style"
            android:text="4" />

        <Button
            android:id="@+id/id_5"
            style="@style/button_style"
            android:text="5" />

        <Button
            android:id="@+id/id_6"
            style="@style/button_style"
            android:text="6" />

        <Button
            android:id="@+id/id_multiply"
            style="@style/button_style"
            android:text="*" />

    </LinearLayout>

    <LinearLayout style="@style/horizontal_linear_layout">

        <Button
            android:id="@+id/id_1"
            style="@style/button_style"
            android:text="1" />

        <Button
            android:id="@+id/id_2"
            style="@style/button_style"
            android:text="2" />

        <Button
            android:id="@+id/id_3"
            style="@style/button_style"
            android:text="3" />

        <Button
            android:id="@+id/id_subtract"
            style="@style/button_style"
            android:text="-" />

    </LinearLayout>

    <LinearLayout style="@style/horizontal_linear_layout">

        <Button
            android:id="@+id/id_0"
            style="@style/button_style"
            android:text="0" />

        <Button
            android:id="@+id/id_period"
            style="@style/button_style"
            android:text="." />

        <Button
            android:id="@+id/id_equal"
            style="@style/button_style"
            android:text="=" />

        <Button
            android:id="@+id/id_add"
            style="@style/button_style"
            android:text="+" />


    </LinearLayout>


</LinearLayout>